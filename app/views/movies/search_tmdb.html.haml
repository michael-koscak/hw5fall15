%h1 The following movies containing '#{@search_params}' were found on TMDb
= form_tag add_tmdb_path do
    %table#movies
        %thead
            %tr
                %th Movie Title
                %th Rating
                %th Release Date
                %th Select
        %tbody
            - @movies.each do |movie|
                %tr
                    %td= movie[:title]
                    %td= movie[:rating]
                    %td= movie[:release_date]
                    %td= check_box_tag "tmdb_movies[#{movie[:id]}]"
    %br
    = submit_tag "Add Selected Movies"
%br
= link_to 'Return to movie list', movies_path